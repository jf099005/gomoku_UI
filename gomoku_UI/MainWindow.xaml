<Window x:Class="test2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <!-- board -->
        <Canvas x:Name="GameBoard" Width="400" Height="400" Background="LightBlue" MouseDown="PutStone_event"/>
        <Button Grid.Column="1" Content="restart" HorizontalAlignment="Left" Margin="47,50,0,0" VerticalAlignment="Top" Height="26" Click="Restart"/>
        <Button Grid.Column="1" Content="calculate state" HorizontalAlignment="Left" Margin="47,85,0,0" VerticalAlignment="Top" Height="26" Click="calculate_state"/>
        <Button Grid.Column="1" Content="cpu move" HorizontalAlignment="Left" Margin="47,116,0,0" VerticalAlignment="Top" Height="26" Click="cpu_move"/>
        <Button Grid.Column="1" Content="show board" HorizontalAlignment="Left" Margin="47,147,0,0" VerticalAlignment="Top" Height="26" Click="print_board"/>

    </Grid>
</Window>
