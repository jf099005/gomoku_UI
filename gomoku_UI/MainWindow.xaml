<Window x:Class="gomoku_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gomoku_UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <!-- board -->
        <Canvas x:Name="GameBoard" Width="400" Height="400" Background="LightBlue" MouseDown="PutStone_event" Grid.Row="0" Grid.Column="0"/>

        <TabControl x:Name="Tab"  Margin="5" Grid.Row="0" Grid.Column="1" SelectionChanged="TabControl_SelectionChanged">
            <TabItem x:Name="versusCPU" Header="VS CPU">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding current_step}"></TextBlock>
                    <local:player_info Grid.Column="0"/>
                    <TextBlock Grid.Column="1" Text="CPU informations" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="23,169,0,0" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="test" Header="test">
                <Grid Height="315">
                    <TextBlock Text="analysis" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,169,0,0"/>
                    <StackPanel HorizontalAlignment="Center">
                        <Button Grid.Column="1" Content="restart" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="26" Click="Restart"/>
                        <!--Button Grid.Column="1" Content="calculate state" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Click="calculate_state"/>
                        -->
                        <Button Grid.Column="1" Content="HAHA" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Command="{Binding HAHA}"/>
                        <Button Grid.Column="1" Content="cpu move" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="26" Click="cpu_move"/>
                        <Button Grid.Column="1" Content="show board" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="26" Click="print_board"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
