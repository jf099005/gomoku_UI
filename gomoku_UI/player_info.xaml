<UserControl x:Class="gomoku_UI.player_info"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gomoku_UI"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="200">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="topic" Text="{Binding topic}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock x:Name="remaining_time" Text="{Binding left_time_str}"/>
        </StackPanel>
        
    </Grid>
</UserControl>
