<Page x:Class="gomoku_UI.Entrance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gomoku_UI"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:ia="using:CommunityToolkit.Mvvm"        
        Title="Entrance" Height="450" Width="800"

      >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.Column="0">
            <TabItem Header="VS CPU">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="197*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.ColumnSpan="2">
                        <TextBlock.FontSize>30</TextBlock.FontSize>
                        <TextBlock.Text>CPU</TextBlock.Text>
                    </TextBlock>
                </Grid>

            </TabItem>
            <TabItem Header="VS Human">
                <TextBlock>
                    <TextBlock.FontSize>30</TextBlock.FontSize>
                    <TextBlock.Text>HUMAN</TextBlock.Text>
                </TextBlock>
            </TabItem>
        </TabControl>

        <Button Content="Start" FontSize="40" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Start_Button_Click" Height="78" Width="128"/>
    </Grid>

</Page>
