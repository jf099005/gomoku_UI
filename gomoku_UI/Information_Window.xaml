<Window x:Class="gomoku_UI.Information_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gomoku_UI"
        mc:Ignorable="d"
        Title="Information_Window" Height="200" Width="300">
    <Grid>
        <Grid>
            <TextBlock Text="AI Level" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="34,10,0,0" Height="21" Width="76"></TextBlock>
            <ComboBox x:Name="AI_Level" SelectedIndex="0" HorizontalAlignment="Left" Margin="129,10,0,0" VerticalAlignment="Top" Width="99" Height="23">
                <ComboBoxItem Content="Easy"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="Hard"/>
            </ComboBox>

            <TextBlock Text="Your Color" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,62,0,0" Height="21" Width="86"/>
            <ComboBox x:Name="Player_Color" SelectedIndex="0" HorizontalAlignment="Left" Margin="129,62,0,0" VerticalAlignment="Top" Width="99" Height="21">
                <ComboBoxItem Content="Black"/>
                <ComboBoxItem Content="White"/>
            </ComboBox>
            <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="108,112,0,0" VerticalAlignment="Top" Click="StartButton_Click"/>
        </Grid>
    </Grid>
</Window>
